<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".waveview.CustomWaveActivity">

    <com.twf.customview.waveview.CustomWaveView
        android:id="@+id/customcirclewaveview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        wave:progress_text_size = "20sp"
        wave:circle_color="@color/colorPrimary"
        wave:circle_bg_color = "@color/colorPrimary"
        wave:progress_wave_color = "@color/colorAccent"
        wave:progress_text_color = "@color/circle_color"/>
</android.support.constraint.ConstraintLayout>